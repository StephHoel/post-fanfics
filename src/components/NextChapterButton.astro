---
export interface Props {
  chapter: number;
  slug: string;
  chapters: Array<{ data: { chapter: number }, slug: string }>;
}
const { chapter, slug, chapters } = Astro.props;
const [ficSlug] = slug.split('/');
const nextChapterNum = chapter + 1;
const nextChapter = chapters.find(c => c.data.chapter === nextChapterNum);
const nextUrl = nextChapter ? `/post-fanfics/fanfics/${ficSlug}/${nextChapter.slug.split('/')[1]}` : null;
---

<div class="mt-10 text-right">
  <a
    href={nextUrl ?? '#'}
    class="inline-block bg-blue-600 text-white px-6 py-2 rounded-full shadow font-semibold transition"
    style={nextUrl ? '' : 'opacity:0.5; pointer-events:none;'}
    aria-disabled={!nextUrl}
  >
    Próximo capítulo →
  </a>
</div>
