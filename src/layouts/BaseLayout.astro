---
import Header from './Header.astro'
import "../styles/global.css";
const { title } = Astro.props;
---

<html lang="pt-BR" class="dark">
  <head>
    <meta charset="UTF-8" />
  <link rel="icon" type="image/svg+xml" href="/post-fanfics/favicon.svg" />
  <link rel="stylesheet" href="/post-fanfics/styles/global.css">
    <title>{title ? `${title}` : "Minhas Fanfics"}</title>
  </head>
  <body class="bg-gray-900 text-gray-100 font-sans min-h-screen flex flex-col">
    <!-- Header -->
    <Header />

    <!-- Conteúdo -->
    <main class="flex-1 max-w-3xl mx-auto w-full p-6">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-gray-400 text-sm py-4 mt-6">
      <div class="max-w-5xl mx-auto text-center">
        @{new Date().getFullYear()} - Steph Hoel | Feito com ❤️ usando Astro & Tailwind
      </div>
    </footer>
  </body>
</html>
